{
	"permissions": {
		"allow": [
			"Bash(node --version:*)",
			"Bash(npm run typecheck:*)",
			"Bash(npm run lint:*)",
			"Bash(npx biome:*)",
			"WebFetch(domain:localhost)",
			"Bash(curl:*)",
			"Bash(git add:*)",
			"Bash(git commit:*)",
			"Bash(cat:*)",
			"Bash(grep:*)",
			"WebSearch",
			"Bash(echo:*)",
			"mcp__next-devtools__init",
			"mcp__next-devtools__nextjs_index",
			"mcp__next-devtools__nextjs_call",
			"mcp__next-devtools__browser_eval"
		]
	},
	"mcpServers": {
		"next-devtools": {
			"command": "npx",
			"args": ["-y", "next-devtools-mcp@latest"]
		}
	}
}
